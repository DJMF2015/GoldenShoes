<%- include('../partials/header'); %>
<head>
    <title>Contact</title>
  
    <link rel='stylesheet' type='text/css' href='../public/css/styles.css'> 
 
    <div class='header'>
        <div class='navigation'>
            
            <div class='navLink'>
                <a href='products'>Shoes</a>
            </div>
                <div class='navLink'>
                    <a href='shop'>View Range</a>
                </div>
            <div class='navLink'>
                <a href='contact'>Contact</a>
            </div>
        </div>
    </div>
    <div class='midContent'>
        <div class='contactWrapper'>
                <form action='/contact' method="POST" > 
                    <!-- hidden input for when updating contact id -->
          
                <div class="form-group">
                    <div class='standardText'>Name</div><label>Name</label>
                    <input class="form-control" type="text" name="name" placeholder="enter title..." required>
                    <br><br>
            
                    <div class='standardText'>Email</div><label for="contact">Email</label>
                    <div class='email'>
                        <input class="form-control" rows=5 cols=20 value="" name="email"
                            placeholder="enter message..." required>
                        </input>
                    </div><br><br>
                    <div class='subject'>
                        <div class=' standardText'>Subject</div>
                        <textarea rows='5' cols='55' placeholder='Subject' name='subject' style="width: 531px; height: 169px;" required></textarea>
                    </div><br><br>
                    <div class='standardText'>Enter your comment below</div>
                    <div class='comment'>
                        <textarea rows='10' cols='55' name='comment' style="width: 531px; height: 169px;" required></textarea>
                    </div>
                    <br><br>
                </div>
                <div class="form-group">
                    <button type="submit" name="button" class="btn btn-info" href="/contact"  style="color: black; margin: 0px;  width: 50% ;">
                    <i class="fa fa-database"></i>Submit  </button>
                    
                    <a class="btn btn-info" style="color: black; width:40%;" href="/submission"><i class=" fa fa-list-alt"></i> View All</a>
                </div>
  
            </form>
        </div>
    </div>
<%- include('../partials/footer'); %>

