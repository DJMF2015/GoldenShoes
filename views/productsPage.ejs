<body>
  <div class='header'>
    <div class='navigation'>
      <div class='navLink'>
        <a href='#'>Home</a>
      </div>
      <div class='navLink'>
        <a href='products'>Colors</a>
      </div>
      <div class='navLink'>
				<a href='cart'>Cart</a>
			</div>
